<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="dandeeee">
        <createTable tableName="Product">
            <column name="id" type="integer" autoIncrement="true"><constraints primaryKey="true"/></column>
            <column name="title" type="char(200)"/>
            <column name="quantity" type="integer"/>
            <column name="createdAt" type="timestamp" defaultValueComputed="now()"/>
        </createTable>
    </changeSet>

    <changeSet id="1-1" author="dandeeee">
        <insert tableName="Product">
            <column name="title" value="My little dress"/>
            <column name="quantity" value="12"/>
        </insert>
        <insert tableName="Product">
            <column name="title" value="Good bye America"/>
            <column name="quantity" value="2"/>
        </insert>
    </changeSet>

    <changeSet id="1-2" author="dandeeee">
        <addColumn tableName="Product">
            <column name="price" type="integer" defaultValue="1000">
                <constraints nullable="false"></constraints>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="1-3" author="dandeeee">
        <addColumn tableName="Product">
            <column name="descr" type="char(MAX)" defaultValue="">
            </column>
        </addColumn>
    </changeSet>


</databaseChangeLog>
